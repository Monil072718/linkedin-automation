PORT=4000
MONGO_URI=mongodb://localhost:27017/linkedin_automation

# LinkedIn app credentials
LINKEDIN_CLIENT_ID=your_client_id
LINKEDIN_CLIENT_SECRET=your_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:4000/api/auth/linkedin/callback
LINKEDIN_VERSION=202509

# JWT for your API sessions (use a strong secret)
JWT_SECRET=supersecret_jwt_key

# Scheduler: run every minute to detect due posts (for precise timing you can set other spec)
SCHEDULE_CRON=*/1 * * * *

# Notification webhook (optional) for failures
NOTIFICATION_WEBHOOK=

# Optional: change timezone
SCHEDULER_TIMEZONE=Asia/Kolkata
